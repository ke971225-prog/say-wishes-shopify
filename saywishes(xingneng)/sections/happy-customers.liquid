{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .happy-customers {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (max-width: 749px) {
    .happy-customers {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  .happy-customers-content {
    text-align: center;
  }

  .happy-customers-title {
    font-size: {{ section.settings.title_font_size | default: 1.8 }}rem;
    font-weight: {{ section.settings.title_font_weight | default: 'bold' }};
    margin-bottom: 1rem;
    color: #333;
  }

  .happy-customers-subtitle {
    font-size: {{ section.settings.subtitle_font_size | default: 1 }}rem;
    font-weight: {{ section.settings.subtitle_font_weight | default: 'normal' }};
    margin-bottom: 1.5rem;
    color: #666;
  }

  .happy-customers-text-content {
    background: #f8f8f8;
    padding: 2rem;
    border-radius: 10px;
    margin-bottom: 1.5rem;
  }

  .happy-customers-rating {
    font-size: {{ section.settings.rating_font_size | default: 2 }}rem;
    margin-bottom: 1rem;
  }

  .happy-customers-rating-text {
    font-size: {{ section.settings.rating_text_font_size | default: 0.9 }}rem;
    font-weight: {{ section.settings.rating_text_font_weight | default: 'normal' }};
    color: #666;
    margin-bottom: 1rem;
  }

  .happy-customers-description {
    font-size: {{ section.settings.description_font_size | default: 0.9 }}rem;
    font-weight: {{ section.settings.description_font_weight | default: 'normal' }};
    line-height: 1.6;
    color: #555;
    margin-bottom: 1.5rem;
  }

  .happy-customers-button {
    background: #e91e63;
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 5px;
    font-size: {{ section.settings.button_font_size | default: 1 }}rem;
    font-weight: {{ section.settings.button_font_weight | default: 'bold' }};
    text-decoration: none;
    display: inline-block;
    transition: background 0.3s;
  }

  .happy-customers-button:hover {
    background: #c2185b;
  }

  .happy-customers-image {
    background: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    text-align: center;
    padding: 2rem;
  }

  .happy-customers-image img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
  }

  /* 移动端响应式设置 */
  @media screen and (max-width: 749px) {
    .happy-customers-title {
      font-size: {{ section.settings.mobile_title_font_size | default: 1.5 }}rem;
    }
    
    .happy-customers-subtitle {
      font-size: {{ section.settings.mobile_subtitle_font_size | default: 0.9 }}rem;
    }
    
    .happy-customers-description {
      font-size: {{ section.settings.mobile_description_font_size | default: 0.8 }}rem;
    }
    
    .happy-customers-button {
      font-size: {{ section.settings.mobile_button_font_size | default: 0.9 }}rem;
    }
    
    .happy-customers-rating {
      font-size: {{ section.settings.mobile_rating_font_size | default: 1.8 }}rem;
    }
    
    .happy-customers-rating-text {
      font-size: {{ section.settings.mobile_rating_text_font_size | default: 0.8 }}rem;
    }
  }
{%- endstyle -%}

