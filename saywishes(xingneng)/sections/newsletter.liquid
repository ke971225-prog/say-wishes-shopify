<div class="newsletter color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="newsletter__wrapper">
      {% if section.settings.title != blank %}
        <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
        </div>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <div class="newsletter__subheading rte">
          {{ section.settings.text }}
        </div>
      {% endif %}
      
      {% form 'customer', class: 'newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form__field-wrapper">
          <div class="field">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="field__input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="Newsletter-error--{{ section.id }}"
              {% elsif form.posted_successfully? %}
                aria-describedby="Newsletter-success--{{ section.id }}"
              {% endif %}
              placeholder="{{ 'newsletter.label' | t }}"
              required
            >
            <label class="field__label" for="NewsletterForm--{{ section.id }}">
              {{ 'newsletter.label' | t }}
            </label>
            <button
              type="submit"
              class="newsletter-form__button field__button"
              name="commit"
              id="Subscribe"
              aria-label="{{ 'newsletter.button_label' | t }}"
            >
              {% render 'icon-arrow' %}
            </button>
          </div>
          {%- if form.errors -%}
            <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
              {%- render 'icon-error' -%}
              {{- form.errors.translated_fields.email | capitalize }}
              {{- form.errors.messages.email -}}
            </small>
          {%- endif -%}
        </div>
        {%- if form.posted_successfully? -%}
          <h3
            class="newsletter-form__message newsletter-form__message--success form__message"
            id="Newsletter-success--{{ section.id }}"
            tabindex="-1"
            autofocus
          >
            {% render 'icon-success' %}
            {{- 'newsletter.success' | t }}
          </h3>
        {%- endif -%}
      {% endform %}
    </div>
  </div>
</div>

<style>
  .newsletter {
    padding: 5rem 0;
    text-align: center;
  }
  
  .newsletter__wrapper {
    max-width: 60rem;
    margin: 0 auto;
  }
  
  .newsletter__subheading {
    margin: 1.5rem 0 3rem;
    font-size: 1.6rem;
    color: rgba(var(--color-foreground), 0.75);
  }
  
  .newsletter-form {
    margin-top: 3rem;
  }
  
  .newsletter-form__field-wrapper {
    max-width: 50rem;
    margin: 0 auto;
  }
  
  .newsletter-form .field {
    display: flex;
    position: relative;
    margin-bottom: 1.5rem;
  }
  
  .newsletter-form .field__input {
    flex: 1;
    min-height: 5rem;
    padding: 1.5rem 6rem 1.5rem 2rem;
    border: 0.1rem solid rgba(var(--color-foreground), 0.2);
    border-radius: 0.5rem;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    font-size: 1.6rem;
  }
  
  .newsletter-form .field__input:focus {
    border-color: rgb(var(--color-foreground));
    outline: none;
    box-shadow: 0 0 0 0.3rem rgba(var(--color-foreground), 0.12);
  }
  
  .newsletter-form .field__label {
    position: absolute;
    left: 2rem;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(var(--color-foreground), 0.55);
    font-size: 1.6rem;
    pointer-events: none;
    transition: all 0.2s ease;
  }
  
  .newsletter-form .field__input:focus + .field__label,
  .newsletter-form .field__input:not(:placeholder-shown) + .field__label {
    top: 1rem;
    font-size: 1.2rem;
    color: rgba(var(--color-foreground), 0.75);
  }
  
  .newsletter-form__button {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    width: 4.5rem;
    height: 4rem;
    border: none;
    border-radius: 0.3rem;
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    cursor: pointer;
    transition: background-color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .newsletter-form__button:hover {
    background-color: rgba(var(--color-button), 0.85);
  }
  
  .newsletter-form__button svg {
    width: 1.8rem;
    height: 1.8rem;
  }
  
  .newsletter-form__message {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
    font-size: 1.4rem;
  }
  
  .newsletter-form__message--success {
    color: rgb(var(--color-success));
  }
  
  .newsletter-form__message svg {
    width: 1.6rem;
    height: 1.6rem;
  }
  
  @media screen and (max-width: 749px) {
    .newsletter {
      padding: 3rem 0;
    }
    
    .newsletter__subheading {
      font-size: 1.4rem;
      margin: 1rem 0 2rem;
    }
    
    .newsletter-form .field__input {
      min-height: 4.5rem;
      padding: 1.2rem 5.5rem 1.2rem 1.5rem;
      font-size: 1.4rem;
    }
    
    .newsletter-form .field__label {
      left: 1.5rem;
      font-size: 1.4rem;
    }
    
    .newsletter-form__button {
      width: 4rem;
      height: 3.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Subscribe to our emails",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Be the first to know about new collections and exclusive offers.</p>",
      "label": "Description"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}