<style>
  .vip-club-section {
    {% if section.settings.enable_gradient_background %}
      background: linear-gradient({{ section.settings.gradient_direction | default: '135deg' }}, 
        {{ section.settings.background_color_1 | default: '#ff7fce' }} 0%, 
        {{ section.settings.background_color_2 | default: '#ff4da6' }} 100%);
    {% else %}
      background: {{ section.settings.background_color_1 | default: '#ff7fce' }};
    {% endif %}
    padding: 60px 0;
    text-align: center;
  }
  
  .vip-club-section .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .vip-club-section h2 {
    color: {{ section.settings.title_color | default: 'white' }};
    font-size: {{ section.settings.title_font_size | default: 40 }}px;
    margin-bottom: 15px;
    font-weight: {{ section.settings.title_font_weight | default: '700' }};
  }
  
  .vip-club-section p {
    color: {{ section.settings.description_color | default: 'white' }};
    font-size: {{ section.settings.description_font_size | default: 19 }}px;
    margin-bottom: 30px;
    font-weight: {{ section.settings.description_font_weight | default: 'normal' }};
    opacity: 0.95;
  }
  
  .vip-input-group {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
    border-radius: 50px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }
  
  .vip-input-group input {
    flex: 1;
    padding: 15px 25px;
    border: none;
    font-size: 16px;
    outline: none;
  }
  
  .vip-input-group button {
    background: {{ section.settings.button_background_color | default: '#333' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    border: none;
    padding: 15px 30px;
    font-size: {{ section.settings.button_font_size | default: 16 }}px;
    font-weight: {{ section.settings.button_font_weight | default: '600' }};
    cursor: pointer;
    transition: background 0.3s ease;
  }
  
  .vip-input-group button:hover {
    background: {{ section.settings.button_hover_color | default: '#555' }};
  }
  
  @media (max-width: 768px) {
    .vip-club-section h2 {
      font-size: 2rem;
    }
    
    .vip-input-group {
      flex-direction: column;
      border-radius: 25px;
    }
    
    .vip-input-group button {
      border-radius: 0 0 25px 25px;
    }
  }
</style>

<div class="vip-club-section">
  <div class="page-width">
    <h2>{{ section.settings.title | default: 'Join Our VIP Club Today! üéÅ' }}</h2>
    <p>{{ section.settings.description | default: 'Join our VIP Club for exclusive offers, free giveaways, and special promotions.' }}</p>
    
    <form accept-charset="UTF-8" action="/contact#{{ section.id }}" class="contact-form" method="post">
      <input name="form_type" type="hidden" value="customer">
      <input name="utf8" type="hidden" value="‚úì">
      <input name="contact[tags]" type="hidden" value="prospect,newsletter,vip">
      <input name="contact[context]" type="hidden" value="section">
      
      <div class="vip-input-group">
        <input 
          type="email" 
          name="contact[email]" 
          placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
          required
          autocapitalize="off"
          autocorrect="off"
        >
        <button type="submit">
          {{ section.settings.button_text | default: 'Subscribe' }}
        </button>
      </div>
    </form>
  </div>
</div>

