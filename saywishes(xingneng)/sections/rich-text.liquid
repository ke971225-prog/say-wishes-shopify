{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    {%- if section.settings.enable_gradient_background -%}
      background: linear-gradient(135deg, {{ section.settings.gradient_color_start }}, {{ section.settings.gradient_color_end }});
    {%- else -%}
      background-color: {{ section.settings.section_background }};
    {%- endif -%}
  }

  .section-{{ section.id }} .rich-text__heading {
    font-size: {{ section.settings.heading_font_size }}rem;
    font-weight: {{ section.settings.heading_font_weight }};
    color: {{ section.settings.heading_color }};
    text-transform: {{ section.settings.heading_text_transform }};
  }

  .section-{{ section.id }} .rich-text__text {
    font-size: {{ section.settings.text_font_size }}rem;
    font-weight: {{ section.settings.text_font_weight }};
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .section-{{ section.id }} .rich-text__image-background { position: relative; display: grid; place-items: center; }
  .section-{{ section.id }} .rich-text__image-background-media { position: absolute; inset: 0; overflow: hidden; }
  .section-{{ section.id }} .rich-text__image-background-media img { width: 100%; height: 100%; object-fit: cover; filter: brightness(var(--brightness)); transform: translateZ(0); }
  .section-{{ section.id }} .rich-text__image-background-layer { position: absolute; inset: 0; background: rgba(0,0,0,var(--overlay-opacity)); }
  .section-{{ section.id }} .rich-text__image-background-content { position: relative; z-index: 1; width: auto; margin: 0 auto; transform: translate(var(--offset-x, 0px), var(--offset-y, 0px)); text-shadow: 0 1px 2px rgba(0,0,0,0.35); }
  .section-{{ section.id }} .desktop-image { display: none; }
  .section-{{ section.id }} .mobile-image { display: block; }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .desktop-image { display: block; }
    .section-{{ section.id }} .mobile-image { display: none; }
  }
{%- endstyle -%}
<script>
  (() => {
    const root = document.getElementById('shopify-section-{{ section.id }}');
    if (!root) return;
    root.querySelectorAll('.rich-text__image-background-content').forEach(el => {
      const words = (el.getAttribute('data-highlight-words') || '').trim();
      if (!words) return;
      const list = words.split(',').map(w => w.trim()).filter(Boolean);
      if (!list.length) return;
      let html = el.innerHTML;
      list.forEach(word => {
        const safe = word.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
        const re = new RegExp(`(${safe})`, 'gi');
        html = html.replace(re, '<mark>$1</mark>');
      });
      el.innerHTML = html;
    });
  })();
</script>

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                class="rich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.heading }}
              </h2>
            {%- when 'caption' -%}
              <p
                class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div
                class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }}; color: {{ block.settings.text_color }}; font-weight: {{ block.settings.font_weight }};"
                {% else %}
                  style="color: {{ block.settings.text_color }}; font-weight: {{ block.settings.font_weight }};"
                {% endif %}
              >
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              <div
                class="rich-text__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label | escape -}}
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    {% if block.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_2 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>
            {%- when 'image_background' -%}
              <style>
                .rich-text__image-background { position: relative; display: grid; place-items: center; isolation: isolate; width: 100vw; min-height: 100vh; margin-left: calc(50% - 50vw); margin-right: calc(50% - 50vw); }
                /* 当使用满屏背景时，移除该区块上/下的留白 */
                .section-{{ section.id }}-padding { padding-top: 0 !important; padding-bottom: 0 !important; }
                .rich-text__image-background-media { position: absolute; inset: 0; overflow: hidden; }
                .rich-text__image-background-media img { width: 100%; height: 100%; object-fit: cover; filter: brightness(var(--brightness, 1)); }
                .rich-text__image-background-layer { position: absolute; inset: 0; background: var(--overlay-color, #000); opacity: var(--overlay-opacity, .3); }
                .rich-text__image-background-content { position: relative; z-index: 1; padding: 1.5rem; width: auto; margin: 0 auto; }
                .rich-text__buttons { display: flex; flex-wrap: wrap; gap: var(--buttons-gap, 12px); justify-content: center; width: 100%; margin-top: 1rem; }
                .rtb-button { display:inline-flex; align-items:center; justify-content:center; text-decoration:none; background: var(--button-bg, #1a73e8); color: var(--button-text, #fff); border-radius: var(--button-radius, 50px); transition: background .2s ease,color .2s ease, box-shadow .2s ease; padding: var(--button-padding-y, 15px) var(--button-padding-x, 30px); font-size: var(--button-font-size, 16px); }
                .rtb-button:hover { background: var(--button-hover-bg, #1459b7); color: var(--button-hover-text, #fff); }
                .rtb-button.size-small { --button-font-size: 14px; --button-padding-y: 10px; --button-padding-x: 24px; }
                .rtb-button.size-medium { --button-font-size: 16px; --button-padding-y: 15px; --button-padding-x: 30px; }
                .rtb-button.size-large { --button-font-size: 18px; --button-padding-y: 16px; --button-padding-x: 34px; }
                .desktop-image { display: block; }
                .mobile-image { display: none; }
                @media (max-width: 749px) { .desktop-image { display: none; } .mobile-image { display: block; }
                  .rich-text__image-background { min-height: 100vh; }
                }
                /* icons row */
                .rtb-icons { display:flex; align-items:center; justify-content:center; gap: var(--icons-gap, 12px); margin-top: 1rem; flex-wrap: wrap; }
                .rtb-icons img { display:block; width: 64px; height: 64px; object-fit: contain; filter: drop-shadow(0 1px 1px rgba(0,0,0,.25)); }
              </style>
              <div class="rich-text__image-background" {{ block.shopify_attributes }} style="--brightness: {{ block.settings.image_brightness | divided_by: 100.0 }}; --overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }}; --overlay-color: {{ block.settings.overlay_color }}; --buttons-gap: {{ block.settings.buttons_gap }}px; --buttons-align: {{ block.settings.buttons_alignment }}; --button-bg: {{ block.settings.button_bg_color }}; --button-text: {{ block.settings.button_text_color }}; --button-hover-bg: {{ block.settings.button_hover_bg_color }}; --button-hover-text: {{ block.settings.button_hover_text_color }}; --button-radius: {{ block.settings.button_radius }}px; --button-padding-y: {{ block.settings.button_padding_y | default: 15 }}px; --button-padding-x: {{ block.settings.button_padding_x | default: 30 }}px; --button-font-size: {{ block.settings.button_font_size | default: 16 }}px; --offset-x: {{ block.settings.content_offset_x | default: 0 }}px; --offset-y: {{ block.settings.content_offset_y | default: 0 }}px;">
                <div class="rich-text__image-background-media">
                  {% liquid
                    assign desktop_image = block.settings.desktop_image
                    assign mobile_image = block.settings.mobile_image
                    assign alt_text = block.settings.image_alt | default: block.settings.content | strip_html | escape
                  %}
                  {% if desktop_image != blank %}
                    {{ desktop_image | image_url: width: 2048 | image_tag: alt: alt_text, class: 'desktop-image', loading: 'lazy', width: desktop_image.width, height: desktop_image.height }}
                  {% endif %}
                  {% if mobile_image != blank %}
                    {{ mobile_image | image_url: width: 1024 | image_tag: alt: alt_text, class: 'mobile-image', loading: 'lazy', width: mobile_image.width, height: mobile_image.height }}
                  {% else %}
                    {% if desktop_image != blank %}
                      {{ desktop_image | image_url: width: 1024 | image_tag: alt: alt_text, class: 'mobile-image', loading: 'lazy', width: desktop_image.width, height: desktop_image.height }}
                    {% endif %}
                  {% endif %}
                </div>
                <div class="rich-text__image-background-layer"></div>
                <div class="rich-text__image-background-content{% if section.settings.full_width %} page-width{% endif %}" data-highlight-words="{{ block.settings.highlight_words }}" style="max-width: {{ block.settings.content_max_width }}px; text-align: {{ block.settings.text_alignment }}; color: {{ block.settings.text_color }}; line-height: {{ block.settings.line_height }}; letter-spacing: {{ block.settings.letter_spacing }}px; font-style: {{ block.settings.font_style }}; font-weight: {{ block.settings.font_weight }}; font-size: {{ block.settings.font_size }}px;">
                  {{ block.settings.content }}
                  {% liquid
                    assign icon_alt = block.settings.image_alt
                    if icon_alt == blank
                      assign icon_alt = 'icon'
                    endif
                  %}
                  <div class="rtb-icons" style="--icons-gap: {{ block.settings.icons_gap }}px;">
                    {% if block.settings.icon_1 != blank %}
                      {{ block.settings.icon_1 | image_url: width: 128 | image_tag: alt: icon_alt, loading: 'lazy', width: 64, height: 64 }}
                    {% endif %}
                    {% if block.settings.icon_2 != blank %}
                      {{ block.settings.icon_2 | image_url: width: 128 | image_tag: alt: icon_alt, loading: 'lazy', width: 64, height: 64 }}
                    {% endif %}
                    {% if block.settings.icon_3 != blank %}
                      {{ block.settings.icon_3 | image_url: width: 128 | image_tag: alt: icon_alt, loading: 'lazy', width: 64, height: 64 }}
                    {% endif %}
                  </div>
                  <div class="rich-text__buttons">
                    {% if block.settings.show_button and block.settings.button_label_1 != blank %}
                      <a {% if block.settings.button_link_1 == blank %} role="link" aria-disabled="true" {% else %} href="{{ block.settings.button_link_1 }}" {% if block.settings.open_in_new_tab_1 %} target="_blank" rel="noopener" {% endif %} {% endif %} class="rtb-button size-{{ block.settings.button_size }}">
                        {{- block.settings.button_label_1 | escape -}}
                      </a>
                    {% endif %}
                  </div>
                </div>
                {% comment %} SEO JSON-LD for block {% endcomment %}
                {% capture seo_name %}{{ block.settings.seo_title | default: block.settings.content | strip_html }}{% endcapture %}
                {% capture seo_desc %}{{ block.settings.seo_description | default: block.settings.content | strip_html | truncate: 160 }}{% endcapture %}
                {% capture seo_keywords %}{{ block.settings.seo_keywords }}{% endcapture %}
                {% assign seo_image = block.settings.desktop_image | image_url %}
                <script type="application/ld+json">
                {
                  "@context": "https://schema.org",
                  "@type": "CreativeWork",
                  "name": {{ seo_name | json }},
                  "description": {{ seo_desc | json }},
                  "keywords": {{ seo_keywords | json }}{% if seo_image != blank %}, "image": {{ seo_image | json }}{% endif %}
                }
                </script>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

