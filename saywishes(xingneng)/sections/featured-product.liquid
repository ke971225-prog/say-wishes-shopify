<style>
  .section-featured-product {
    padding: 60px 0;
    background: {{ section.settings.background_color }};
  }
  
  .featured-product-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .featured-product-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: {{ section.settings.heading_color }};
  }
  
  .featured-product-subtitle {
    text-align: center;
    font-size: 1.1rem;
    margin-bottom: 50px;
    color: {{ section.settings.text_color }};
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .featured-products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
  }
  
  .featured-product-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }
  
  .featured-product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
  }
  
  .featured-product-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
  }
  
  .featured-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .featured-product-card:hover .featured-product-image img {
    transform: scale(1.05);
  }
  
  .product-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: #ff4444;
    color: white;
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
    z-index: 2;
  }
  
  .featured-product-content {
    padding: 25px;
  }
  
  .featured-product-name {
    font-size: 1.3rem;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
    line-height: 1.4;
  }
  
  .featured-product-description {
    color: #666;
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 15px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .featured-product-price {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 15px;
  }
  
  .price-current {
    font-size: 1.4rem;
    font-weight: bold;
    color: #e74c3c;
  }
  
  .price-original {
    font-size: 1.1rem;
    color: #999;
    text-decoration: line-through;
  }
  
  .featured-product-rating {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 20px;
  }
  
  .rating-stars {
    display: flex;
    gap: 2px;
  }
  
  .star {
    color: #ffd700;
    font-size: 1rem;
  }
  
  .rating-text {
    color: #666;
    font-size: 0.9rem;
  }
  
  .featured-product-button {
    width: 100%;
    background: {{ section.settings.button_color | default: '#333' }};
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }
  
  .featured-product-button:hover {
    background: {{ section.settings.button_hover_color | default: '#555' }};
    transform: translateY(-2px);
  }
  
  .section-cta {
    text-align: center;
    margin-top: 40px;
  }
  
  .section-cta-button {
    background: {{ section.settings.cta_button_color | default: '#e74c3c' }};
    color: white;
    padding: 15px 40px;
    border-radius: 30px;
    font-size: 1.1rem;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }
  
  .section-cta-button:hover {
    background: {{ section.settings.cta_button_hover_color | default: '#c0392b' }};
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .featured-product-title {
      font-size: 2rem;
    }
    
    .featured-products-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    
    .featured-product-content {
      padding: 20px;
    }
  }
</style>

<section class="section-featured-product color-{{ section.settings.color_scheme }}" {% if section.settings.secondary_background %}style="background: {{ section.settings.secondary_background }}"{% endif %}>
  <div class="featured-product-container">
    {% if section.settings.heading != blank %}
      <h2 class="featured-product-title">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="featured-product-subtitle">{{ section.settings.subheading }}</p>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="featured-products-grid">
        {% for block in section.blocks %}
          {% if block.type == 'product' %}
            {% assign product = all_products[block.settings.product] %}
            {% if product != blank %}
              <div class="featured-product-card" {{ block.shopify_attributes }}>
                <div class="featured-product-image">
                  {% if product.featured_media %}
                    <img src="{{ product.featured_media | image_url: width: 400 }}" 
                         alt="{{ product.featured_media.alt | escape }}" 
                         width="400" 
                         height="400" 
                         loading="lazy">
                  {% else %}
                    <div style="width: 400px; height: 400px; background: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">
                      No Image
                    </div>
                  {% endif %}
                  
                  {% if product.compare_at_price > product.price %}
                    <div class="product-badge">Sale</div>
                  {% endif %}
                </div>
                
                <div class="featured-product-content">
                  <h3 class="featured-product-name">{{ product.title }}</h3>
                  
                  {% if product.description != blank %}
                    <p class="featured-product-description">{{ product.description | strip_html | truncate: 120 }}</p>
                  {% endif %}
                  
                  <div class="featured-product-price">
                    <span class="price-current">{{ product.price | money }}</span>
                    {% if product.compare_at_price > product.price %}
                      <span class="price-original">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                  </div>
                  
                  <div class="featured-product-rating">
                    <div class="rating-stars">
                      {% for i in (1..5) %}
                        <span class="star">â˜…</span>
                      {% endfor %}
                    </div>
                    <span class="rating-text">({{ product.metafields.reviews.rating_count | default: '127' }} reviews)</span>
                  </div>
                  
                  <a href="{{ product.url }}" class="featured-product-button">
                    {{ block.settings.button_text | default: 'View Product' }}
                  </a>
                </div>
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
    
    {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
      <div class="section-cta">
        <a href="{{ section.settings.cta_link }}" class="section-cta-button">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{% if section.settings.image_zoom == 'hover' %}
  <script id="EnableZoomOnHover-featured" src="{{ 'magnify.js' | asset_url }}" defer="defer"></script>
{% endif %}

{% if request.design_mode %}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{% endif %}

<script type="application/ld+json">
  {% for block in section.blocks %}
    {% if block.type == 'product' %}
      {% assign product = all_products[block.settings.product] %}
      {% if product != blank %}
        {{ product | structured_data }}
      {% endif %}
    {% endif %}
  {% endfor %}
</script>

{% schema %}
