  <div class="top-marquee">
    <div class="top-marquee-content">
      {{
        section.settings.top_marquee_text
        | default: '🎁 Special Offer: Free Shipping Worldwide! 🌍 Order Now and Get 20% Off! 💖'
      }}
    </div>
  </div>

  {% comment %} SEO: 为背景图添加隐藏图片以便搜索引擎索引 {% endcomment %}
  {% if section.settings.desktop_bg_image != blank %}
    <img class="visually-hidden-bg-image visually-hidden-bg-image--desktop"
         src="{{ section.settings.desktop_bg_image | image_url: width: 1200 }}"
         alt="{{ section.settings.bg_image_alt | default: section.settings.desktop_bg_image.alt | escape }}"
         title="{{ section.settings.bg_image_title | escape }}"
         width="{{ section.settings.desktop_bg_image.width }}"
         height="{{ section.settings.desktop_bg_image.height }}"
         loading="lazy" decoding="async" />
  {% endif %}
  {% if section.settings.mobile_bg_image != blank %}
    <img class="visually-hidden-bg-image visually-hidden-bg-image--mobile"
         src="{{ section.settings.mobile_bg_image | image_url: width: 800 }}"
         alt="{{ section.settings.bg_image_alt | default: section.settings.mobile_bg_image.alt | escape }}"
         title="{{ section.settings.bg_image_title | escape }}"
         width="{{ section.settings.mobile_bg_image.width }}"
         height="{{ section.settings.mobile_bg_image.height }}"
         loading="lazy" decoding="async" />
  {% endif %}

  <div class="video-message-container">
    <div class="video-message-content">
      {% if section.settings.subtitle != blank %}
        <p class="video-message-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.title != blank %}
        {% if request.page_type == 'index' %}
          <h2 class="video-message-title">
            {{ section.settings.title | replace: '❤️', '<span class="heart">❤️</span>' }}
          </h2>
        {% else %}
          <h1 class="video-message-title">
            {{ section.settings.title | replace: '❤️', '<span class="heart">❤️</span>' }}
          </h1>
        {% endif %}
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="video-message-description">
          {{
            section.settings.description
            | replace: 'joyful video message', '<span class="highlight">joyful video message</span>'
            | replace: 'unforgettable gift', '<span class="highlight">unforgettable gift</span>'
          }}
        </div>
      {% endif %}

      {% if section.settings.image != blank %}
        <div class="video-message-media">
          <picture>
            <source 
              srcset="
                {%- if section.settings.image.width >= 400 -%}{{ section.settings.image | image_url: width: 400, format: 'webp' }} 400w,{%- endif -%}
                {%- if section.settings.image.width >= 600 -%}{{ section.settings.image | image_url: width: 600, format: 'webp' }} 600w,{%- endif -%}
                {%- if section.settings.image.width >= 800 -%}{{ section.settings.image | image_url: width: 800, format: 'webp' }} 800w,{%- endif -%}
                {%- if section.settings.image.width >= 1200 -%}{{ section.settings.image | image_url: width: 1200, format: 'webp' }} 1200w,{%- endif -%}
                {{ section.settings.image | image_url: format: 'webp' }} {{ section.settings.image.width }}w
              "
              sizes="(min-width: 1200px) 800px, (min-width: 750px) calc(100vw - 100px), calc(100vw - 40px)"
              type="image/webp"
            >
            <img
              srcset="
                {%- if section.settings.image.width >= 400 -%}{{ section.settings.image | image_url: width: 400 }} 400w,{%- endif -%}
                {%- if section.settings.image.width >= 600 -%}{{ section.settings.image | image_url: width: 600 }} 600w,{%- endif -%}
                {%- if section.settings.image.width >= 800 -%}{{ section.settings.image | image_url: width: 800 }} 800w,{%- endif -%}
                {%- if section.settings.image.width >= 1200 -%}{{ section.settings.image | image_url: width: 1200 }} 1200w,{%- endif -%}
                {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
              "
              src="{{ section.settings.image | image_url: width: 800 }}"
              sizes="(min-width: 1200px) 800px, (min-width: 750px) calc(100vw - 100px), calc(100vw - 40px)"
              alt="{{ section.settings.image.alt | escape }}"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              loading="lazy"
              decoding="async"
            >
          </picture>
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link | default: '#' }}" class="video-message-button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}

      {% if section.settings.show_rating %}
        <div class="video-message-rating">
          <span class="rating-stars">
            {% for i in (1..section.settings.rating_stars) %}
              ⭐
            {% endfor %}
          </span>
          <span>{{ section.settings.rating_text }}</span>
        </div>
      {% endif %}
    </div>
  </div>

  <!-- 底部走马灯 -->
  <div class="bottom-marquee">
    <div class="bottom-marquee-content">
      {{
        section.settings.bottom_marquee_text
        | default: '🌟 Personalized Video Messages from Africa 💝 Custom African Video Greetings 🎬 Birthday Video Messages 🚀 Anniversary Video Wishes ⭐ Authentic African Video Messages'
      }}
    </div>
  </div><style>
  .visually-hidden-bg-image {
    position: absolute;
    width: 1px;
    height: 1px;
    opacity: 0;
    pointer-events: none;
    left: -9999px;
  }
</style>

</div>

