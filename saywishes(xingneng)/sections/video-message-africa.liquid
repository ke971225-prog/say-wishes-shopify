<style>
  .video-message-section {
    {% if section.settings.enable_gradient_background %}
      background: linear-gradient(135deg, {{ section.settings.gradient_color_start | default: '#8BC34A' }}, {{ section.settings.gradient_color_end | default: '#E91E63' }});
    {% else %}
      background: {{ section.settings.background_color | default: '#f8f9fa' }};
    {% endif %}
    padding: {{ section.settings.padding_top | default: 60 }}px {{ section.settings.padding_horizontal | default: 20 }}px {{ section.settings.padding_bottom | default: 60 }}px;
    text-align: {{ section.settings.text_alignment | default: 'center' }};
    position: relative;
    overflow: hidden;
  }

  .video-message-container {
    max-width: {{ section.settings.container_width | default: 1200 }}px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  /* 背景图层与亮度、遮罩控制 */
  .video-message-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--bg-desktop);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: brightness(var(--bg-brightness, 1));
    z-index: 0;
  }

  .video-message-section::after {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--bg-overlay-color, transparent);
    opacity: var(--bg-overlay-opacity, 0);
    z-index: 0;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .video-message-section::before {
      background-image: var(--bg-mobile, var(--bg-desktop));
    }
  }

  /* 顶部走马灯 */
  .top-marquee {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background: {{ section.settings.top_marquee_bg | default: 'rgba(0, 0, 0, 0.8)' }};
    color: {{ section.settings.top_marquee_color | default: 'white' }};
    padding: 8px 0;
    font-size: {{ section.settings.marquee_font_size | default: 0.9 }}rem;
    white-space: nowrap;
    overflow: hidden;
    z-index: 2;
  }

  .top-marquee-content {
    display: inline-block;
    animation: marquee-top {{ section.settings.marquee_speed | default: 20 }}s linear infinite;
  }

  @keyframes marquee-top {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* 底部走马灯 */
  .bottom-marquee {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: {{ section.settings.bottom_marquee_bg | default: 'rgba(0, 0, 0, 0.8)' }};
    color: {{ section.settings.bottom_marquee_color | default: 'white' }};
    padding: 8px 0;
    font-size: {{ section.settings.marquee_font_size | default: 0.9 }}rem;
    white-space: nowrap;
    overflow: hidden;
    z-index: 2;
  }

  .bottom-marquee-content {
    display: inline-block;
    animation: marquee-bottom {{ section.settings.marquee_speed | default: 20 }}s linear infinite;
  }

  @keyframes marquee-bottom {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  /* 主要内容区域 */
  .video-message-content {
    margin-top: 40px;
  }

  .video-message-subtitle {
    font-size: {{ section.settings.subtitle_font_size | default: 0.9 }}rem;
    color: {{ section.settings.subtitle_color | default: '#666' }};
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: {{ section.settings.subtitle_font_weight | default: 'normal' }};
  }

  .video-message-title {
    font-size: {{ section.settings.title_font_size | default: 2.5 }}rem;
    font-weight: {{ section.settings.title_font_weight | default: 'bold' }};
    color: {{ section.settings.title_color | default: '#333' }};
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .video-message-title .heart {
    color: {{ section.settings.heart_color | default: '#e91e63' }};
  }

  .video-message-description {
    font-size: {{ section.settings.description_font_size | default: 1.1 }}rem;
    color: {{ section.settings.description_color | default: '#555' }};
    margin-bottom: 2rem;
    line-height: 1.6;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    font-weight: {{ section.settings.description_font_weight | default: 'normal' }};
  }

  .video-message-description .highlight {
    font-weight: bold;
    color: {{ section.settings.highlight_color | default: '#333' }};
  }

  /* 视频/图片区域 */
  .video-message-media {
    position: relative;
    max-width: {{ section.settings.media_max_width | default: 800 }}px;
    margin: 0 auto 2rem;
    border-radius: {{ section.settings.media_border_radius | default: 15 }}px;
    overflow: hidden;
    box-shadow: 0 10px 30px {{ section.settings.media_shadow_color | default: 'rgba(0, 0, 0, 0.2)' }};
  }

  .video-message-media img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* 按钮样式 */
  .video-message-button {
    background: linear-gradient(135deg, {{ section.settings.button_bg_start | default: '#e91e63' }}, {{ section.settings.button_bg_end | default: '#f06292' }});
    color: {{ section.settings.button_text_color | default: 'white' }};
    padding: {{ section.settings.button_padding_vertical | default: 16 }}px {{ section.settings.button_padding_horizontal | default: 30 }}px;
    border: {{ section.settings.button_border_width | default: 0 }}px solid {{ section.settings.button_border_color | default: 'transparent' }};
    border-radius: {{ section.settings.button_border_radius | default: 25 }}px;
    font-weight: {{ section.settings.button_font_weight | default: 'bold' }};
    font-size: {{ section.settings.button_font_size | default: 1 }}rem;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    text-transform: {{ section.settings.button_text_transform | default: 'uppercase' }};
    letter-spacing: 1px;
    margin-bottom: 1.5rem;
  }

  .video-message-button:hover {
    background: linear-gradient(135deg, {{ section.settings.button_hover_bg_start | default: '#c2185b' }}, {{ section.settings.button_hover_bg_end | default: '#e91e63' }});
    color: {{ section.settings.button_hover_text_color | default: 'white' }};
    transform: translateY(-2px);
    box-shadow: 0 5px 15px {{ section.settings.button_hover_shadow | default: 'rgba(233, 30, 99, 0.4)' }};
  }

  /* 评分区域 */
  .video-message-rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    font-size: {{ section.settings.rating_font_size | default: 0.9 }}rem;
    color: {{ section.settings.rating_text_color | default: '#666' }};
  }

  .rating-stars {
    color: {{ section.settings.rating_stars_color | default: '#ffc107' }};
    font-size: {{ section.settings.rating_stars_size | default: 1.1 }}rem;
  }

  /* 底部走马灯 */
  .bottom-marquee {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: {{ section.settings.bottom_marquee_bg | default: 'rgba(0, 0, 0, 0.8)' }};
    color: {{ section.settings.bottom_marquee_color | default: 'white' }};
    padding: 8px 0;
    font-size: {{ section.settings.marquee_font_size | default: 0.9 }}rem;
    white-space: nowrap;
    overflow: hidden;
    z-index: 2;
  }

  .bottom-marquee-content {
    display: inline-block;
    animation: marquee-bottom {{ section.settings.marquee_speed | default: 25 }}s linear infinite;
  }

  @keyframes marquee-bottom {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  /* 响应式设计 */
  @media screen and (max-width: 768px) {
    .video-message-section {
      padding: {{ section.settings.mobile_padding_top | default: 40 }}px {{ section.settings.mobile_padding_horizontal | default: 15 }}px {{ section.settings.mobile_padding_bottom | default: 40 }}px;
    }

    .video-message-title {
      font-size: {{ section.settings.mobile_title_font_size | default: 2 }}rem;
    }

    .video-message-description {
      font-size: {{ section.settings.mobile_description_font_size | default: 1 }}rem;
    }

    .video-message-button {
      padding: {{ section.settings.mobile_button_padding_vertical | default: 12 }}px {{ section.settings.mobile_button_padding_horizontal | default: 24 }}px;
      font-size: {{ section.settings.mobile_button_font_size | default: 0.9 }}rem;
    }

    .top-marquee,
    .bottom-marquee {
      font-size: {{ section.settings.mobile_marquee_font_size | default: 0.8 }}rem;
    }
  }
</style>

<div class="video-message-section section-{{ section.id }}-padding" style="{% if section.settings.desktop_bg_image != blank %}--bg-desktop: url('{{ section.settings.desktop_bg_image | image_url: width: 2400 }}');{% endif %}{% if section.settings.mobile_bg_image != blank %} --bg-mobile: url('{{ section.settings.mobile_bg_image | image_url: width: 1400 }}');{% elsif section.settings.desktop_bg_image != blank %} --bg-mobile: url('{{ section.settings.desktop_bg_image | image_url: width: 1400 }}');{% endif %} --bg-brightness: {{ section.settings.bg_brightness | default: 1 }}; --bg-overlay-color: {{ section.settings.bg_overlay_color | default: '#000000' }}; --bg-overlay-opacity: {{ section.settings.bg_overlay_opacity | default: 0 }};">
