<style>
.custom-announcement-bar {
  background: #ff1493;
  color: white;
  padding: 8px 0;
  position: relative;
  overflow: hidden;
  z-index: 1000;
}

.custom-announcement-bar .marquee-container {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.custom-announcement-bar .marquee-content {
  display: inline-block;
  animation: marquee 45s linear infinite;
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.custom-announcement-bar .marquee-content:hover {
  animation-play-state: paused;
}

.custom-announcement-bar .cta-button {
  background: white;
  color: #ff1493;
  padding: 4px 12px;
  border-radius: 4px;
  text-decoration: none;
  font-weight: bold;
  margin: 0 20px;
  display: inline-block;
  transition: all 0.3s ease;
}

.custom-announcement-bar .cta-button:hover {
  background: #f0f0f0;
  transform: scale(1.05);
}

.custom-announcement-bar .close-btn {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: white;
  font-size: 18px;
  cursor: pointer;
  padding: 0;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes marquee {
  0% { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

@media (max-width: 768px) {
  .custom-announcement-bar .marquee-content {
    font-size: 12px;
    animation-duration: 35s;
  }
  
  .custom-announcement-bar .cta-button {
    padding: 3px 8px;
    font-size: 12px;
    margin: 0 10px;
  }
}

.custom-announcement-bar.hidden {
  display: none;
}
</style>

