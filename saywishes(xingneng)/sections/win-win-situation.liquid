{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    {% if section.settings.enable_gradient_background %}
      background: linear-gradient(135deg, {{ section.settings.gradient_color_start }} 0%, {{ section.settings.gradient_color_end }} 100%);
    {% else %}
      background-color: {{ section.settings.section_background | default: '#f8f8f8' }};
    {% endif %}
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .win-win-title {
    text-align: center;
    font-size: {{ section.settings.main_title_font_size | default: 2.5 }}rem;
    font-weight: {{ section.settings.main_title_font_weight | default: 'bold' }};
    margin-bottom: 3rem;
    color: {{ section.settings.main_title_color | default: '#333' }};
    text-transform: {{ section.settings.main_title_text_transform | default: 'none' }};
  }

  .win-win-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .win-win-text {
    padding: {{ section.settings.text_padding | default: 2 }}rem;
    background-color: {{ section.settings.text_background | default: 'transparent' }};
    border-radius: {{ section.settings.text_border_radius | default: 0 }}px;
  }

  .win-win-text h3 {
    font-size: {{ section.settings.left_title_font_size | default: 1.8 }}rem;
    font-weight: {{ section.settings.left_title_font_weight | default: 'bold' }};
    margin-bottom: 1rem;
    color: {{ section.settings.left_title_color | default: '#333' }};
    text-transform: {{ section.settings.left_title_text_transform | default: 'none' }};
  }

  .win-win-text p {
    font-size: {{ section.settings.left_text_font_size | default: 1 }}rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    color: {{ section.settings.left_text_color | default: '#666' }};
    font-weight: {{ section.settings.left_text_font_weight | default: 'normal' }};
  }

  .win-win-text .highlight {
    font-weight: {{ section.settings.highlight_font_weight | default: 'bold' }};
    color: {{ section.settings.highlight_color | default: '#e91e63' }};
    font-size: {{ section.settings.highlight_font_size | default: 1 }}rem;
    text-transform: {{ section.settings.highlight_text_transform | default: 'none' }};
  }

  .win-win-button {
    background: {{ section.settings.button_bg_color | default: 'linear-gradient(135deg, #e91e63, #f06292)' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    padding: {{ section.settings.button_padding_vertical | default: 18 }}px {{ section.settings.button_padding_horizontal | default: 40 }}px;
    border: {{ section.settings.button_border_width | default: 0 }}px solid {{ section.settings.button_border_color | default: 'transparent' }};
    border-radius: {{ section.settings.button_border_radius | default: 25 }}px;
    font-size: {{ section.settings.button_font_size | default: 1.1 }}rem;
    font-weight: {{ section.settings.button_font_weight | default: '600' }};
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-transform: {{ section.settings.button_text_transform | default: 'uppercase' }};
    letter-spacing: 1px;
  }

  .win-win-button:hover {
    transform: translateY(-2px);
    background: {{ section.settings.button_hover_bg_color | default: 'linear-gradient(135deg, #c2185b, #e91e63)' }};
    color: {{ section.settings.button_hover_text_color | default: 'white' }};
    box-shadow: 0 4px 15px rgba(233, 30, 99, 0.3);
  }

  .button-container {
    text-align: {{ section.settings.button_alignment | default: 'left' }};
    margin-top: 1.5rem;
  }

  .win-win-image {
    border-radius: {{ section.settings.card_border_radius | default: 20 }}px;
    overflow: hidden;
    background: {{ section.settings.card_background | default: 'linear-gradient(135deg, #e91e63, #ff6b9d)' }};
    padding: {{ section.settings.card_padding | default: 2 }}rem;
    color: {{ section.settings.card_text_color | default: 'white' }};
    text-align: center;
  }

  .win-win-image h4 {
    font-size: {{ section.settings.card_subtitle_font_size | default: 1.2 }}rem;
    margin-bottom: 1rem;
    opacity: 0.9;
    font-weight: {{ section.settings.card_subtitle_font_weight | default: 'normal' }};
    text-transform: {{ section.settings.card_subtitle_text_transform | default: 'none' }};
  }

  .win-win-image h2 {
    font-size: {{ section.settings.card_title_font_size | default: 2 }}rem;
    font-weight: {{ section.settings.card_title_font_weight | default: 'bold' }};
    margin-bottom: 1rem;
    text-transform: {{ section.settings.card_title_text_transform | default: 'none' }};
  }

  .win-win-image p {
    font-size: {{ section.settings.card_description_font_size | default: 0.9 }}rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
    font-weight: {{ section.settings.card_description_font_weight | default: 'normal' }};
  }

  .win-win-image img {
    max-width: 100%;
    border-radius: {{ section.settings.card_image_border_radius | default: 10 }}px;
  }

  @media screen and (max-width: 749px) {
    .win-win-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .win-win-title {
      font-size: {{ section.settings.mobile_main_title_font_size | default: 2 }}rem;
    }
    
    .win-win-text h3 {
      font-size: {{ section.settings.mobile_left_title_font_size | default: 1.5 }}rem;
    }
    
    .win-win-text p {
      font-size: {{ section.settings.mobile_left_text_font_size | default: 0.9 }}rem;
    }
    
    .win-win-text .highlight {
      font-size: {{ section.settings.mobile_highlight_font_size | default: 0.9 }}rem;
    }
    
    .win-win-button {
      padding: {{ section.settings.mobile_button_padding_vertical | default: 15 }}px {{ section.settings.mobile_button_padding_horizontal | default: 30 }}px;
      font-size: {{ section.settings.mobile_button_font_size | default: 1 }}rem;
    }
    
    .button-container {
      text-align: {{ section.settings.mobile_button_alignment | default: section.settings.button_alignment | default: 'left' }};
    }
    
    .win-win-image h4 {
      font-size: {{ section.settings.mobile_card_subtitle_font_size | default: 1 }}rem;
    }
    
    .win-win-image h2 {
      font-size: {{ section.settings.mobile_card_title_font_size | default: 1.6 }}rem;
    }
    
    .win-win-image p {
      font-size: {{ section.settings.mobile_card_description_font_size | default: 0.8 }}rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
