        <p>{{ section.settings.card_description }}</p>
        {%- if section.settings.card_image != blank -%}
          {{ section.settings.card_image | image_url: width: 300 | image_tag: loading: 'lazy' }}
        {%- endif -%}
      </div>
    </div>
  </div>
