{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    {% if section.settings.enable_gradient_background %}
      background: linear-gradient(135deg, {{ section.settings.gradient_color_start }} 0%, {{ section.settings.gradient_color_end }} 100%);
    {% else %}
      background-color: {{ section.settings.section_background_color }};
    {% endif %}
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .customer-reviews {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .customer-reviews {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .customer-reviews__content {
    text-align: left;
  }

  .customer-reviews__title {
    font-size: {{ section.settings.heading_font_size_desktop }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    color: {{ section.settings.heading_color }};
    text-transform: {{ section.settings.heading_text_transform }};
    margin-bottom: {{ section.settings.heading_bottom_margin }}px;
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .customer-reviews__title {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }
  }

  .customer-reviews__description {
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: {{ section.settings.description_font_weight }};
    color: {{ section.settings.description_color }};
    font-style: {{ section.settings.description_font_style }};
    line-height: {{ section.settings.description_line_height }};
    margin-bottom: {{ section.settings.description_bottom_margin }}px;
  }

  .customer-reviews__rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .customer-reviews__stars {
    color: #ffd700;
    font-size: 1.2rem;
  }

  .customer-reviews__rating-text {
    font-size: 0.9rem;
    color: {{ section.settings.description_color }};
    font-weight: 600;
  }

  /* ÊåâÈíÆÂÆπÂô®ÂØπÈΩêÊ†∑Âºè */
  .button-container {
    text-align: {{ section.settings.button_alignment | default: 'left' }};
    margin-top: 1.5rem;
  }

  /* ‰∏é win-win-situation Áõ∏ÂêåÁöÑÊåâÈíÆÊ†∑Âºè */
  .customer-reviews-button {
    background: {{ section.settings.button_background_color | default: 'linear-gradient(135deg, #e91e63, #f06292)' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    padding: {{ section.settings.button_padding_vertical_desktop }}px {{ section.settings.button_padding_horizontal_desktop }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size_desktop }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-transform: {{ section.settings.button_text_transform }};
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  @media screen and (max-width: 749px) {
    .customer-reviews-button {
      font-size: {{ section.settings.button_font_size_mobile }}px;
      padding: {{ section.settings.button_padding_vertical_mobile }}px {{ section.settings.button_padding_horizontal_mobile }}px;
    }
  }

  .customer-reviews-button:hover {
    background: {{ section.settings.button_hover_background_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .customer-reviews__showcase {
    background: linear-gradient(135deg, #e91e63 0%, #ad1457 100%);
    border-radius: 20px;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    min-height: 300px;
  }

  .customer-reviews__showcase-stars {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: #ffd700;
    font-size: 1.5rem;
  }

  .customer-reviews__cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    transform: rotate(-5deg);
  }

  .customer-reviews__card {
    background: #fff;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    font-size: 0.8rem;
    line-height: 1.4;
    transform: rotate(5deg);
    transition: transform 0.3s ease;
  }

  .customer-reviews__card:hover {
    transform: rotate(0deg) scale(1.05);
  }

  .customer-reviews__card-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .customer-reviews__card-avatar {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: #ddd;
  }

  .customer-reviews__card-name {
    font-weight: bold;
    font-size: 0.7rem;
  }

  .customer-reviews__card-rating {
    color: #ffd700;
    font-size: 0.7rem;
  }

  .customer-reviews__card-text {
    font-size: 0.7rem;
    color: #333;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="customer-reviews isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
    <div class="customer-reviews__content">
      {%- unless section.settings.heading == blank -%}
        <h2 class="customer-reviews__title">{{ section.settings.heading }}</h2>
      {%- endunless -%}
      
      {%- unless section.settings.description == blank -%}
        <div class="customer-reviews__description">{{ section.settings.description }}</div>
      {%- endunless -%}
      
      <div class="customer-reviews__rating">
        <div class="customer-reviews__stars">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
        <div class="customer-reviews__rating-text">{{ section.settings.rating_text }}</div>
      </div>
      
      {%- unless section.settings.button_label == blank -%}
        <div class="button-container">
          <a href="{{ section.settings.button_link }}" class="customer-reviews-button">
            {{ section.settings.button_label }}
          </a>
        </div>
      {%- endunless -%}
    </div>
    
    <div class="customer-reviews__showcase">
      <div class="customer-reviews__showcase-stars">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
      <div class="customer-reviews__cards">
        {% for block in section.blocks %}
          <div class="customer-reviews__card">
            <div class="customer-reviews__card-header">
              <div class="customer-reviews__card-avatar"></div>
              <div class="customer-reviews__card-name">{{ block.settings.customer_name }}</div>
              <div class="customer-reviews__card-rating">{{ block.settings.rating }}</div>
            </div>
            <div class="customer-reviews__card-text">{{ block.settings.review_text }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

