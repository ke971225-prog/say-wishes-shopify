              {%- endif -%}
            {%- endunless -%}
            <a href="{{ button_url }}" class="viral-social-button" target="_blank" rel="noopener noreferrer">
              {{ section.settings.button_label }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

