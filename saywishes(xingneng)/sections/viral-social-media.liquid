{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 75 | divided_by: 100 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 75 | divided_by: 100 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .viral-social-section {
    {% if section.settings.enable_gradient_background %}
      background: linear-gradient(135deg, {{ section.settings.gradient_color_start | default: '#8BC34A' }}, {{ section.settings.gradient_color_end | default: '#E91E63' }});
    {% else %}
      background-color: {{ section.settings.section_background | default: '#f8f8f8' }};
    {% endif %}
  }

  .viral-social-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .viral-social-image {
    position: relative;
    border-radius: {{ section.settings.card_border_radius | default: 20 }}px;
    overflow: hidden;
    background: {{ section.settings.card_background | default: 'linear-gradient(135deg, #ff4757, #ff6b9d)' }};
    padding: {{ section.settings.card_padding | default: 2 }}rem;
    text-align: center;
  }

  .viral-social-image h3 {
    color: {{ section.settings.card_title_color | default: 'white' }};
    font-size: {{ section.settings.card_title_font_size | default: 1.8 }}rem;
    font-weight: {{ section.settings.card_title_font_weight | default: 'bold' }};
    margin-bottom: 1.5rem;
  }

  .viral-social-image .phone-mockup {
    max-width: 200px;
    width: 100%;
    height: 200px;
    margin: 0 auto 1rem auto;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 15px;
  }

  .viral-social-image .phone-mockup img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 15px;
  }

  .viral-social-image .social-icons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .viral-social-image .social-icon {
    width: 30px;
    height: 30px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .viral-social-text {
    padding: {{ section.settings.text_padding | default: 2 }}rem;
  }

  .viral-social-text h2 {
    font-size: {{ section.settings.main_title_font_size | default: 2.5 }}rem;
    font-weight: {{ section.settings.main_title_font_weight | default: 'bold' }};
    margin-bottom: 1.5rem;
    color: {{ section.settings.main_title_color | default: '#333' }};
    line-height: 1.2;
    text-transform: {{ section.settings.main_title_text_transform | default: 'none' }};
  }

  .viral-social-text p {
    font-size: {{ section.settings.description_font_size | default: 1 }}rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    color: {{ section.settings.description_color | default: '#666' }};
    font-style: {{ section.settings.description_font_style | default: 'italic' }};
    font-weight: {{ section.settings.description_font_weight | default: 'normal' }};
  }

  .viral-social-button {
    background: {{ section.settings.button_background | default: 'linear-gradient(135deg, #e91e63, #ff6b9d)' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    padding: {{ section.settings.button_padding_vertical | default: 1 }}rem {{ section.settings.button_padding_horizontal | default: 2 }}rem;
    border: {{ section.settings.button_border_width | default: 0 }}px solid {{ section.settings.button_border_color | default: 'transparent' }};
    border-radius: {{ section.settings.button_border_radius | default: 25 }}px;
    font-size: {{ section.settings.button_font_size | default: 1 }}rem;
    font-weight: {{ section.settings.button_font_weight | default: 'bold' }};
    text-decoration: none;
    display: inline-block;
    transition: transform 0.3s ease;
    text-transform: {{ section.settings.button_text_transform | default: 'none' }};
  }

  .viral-social-button:hover {
    transform: translateY(-2px);
    color: {{ section.settings.button_text_color | default: 'white' }};
    background: {{ section.settings.button_hover_background | default: 'linear-gradient(135deg, #d81b60, #e91e63)' }};
  }

  /* Tag Us äº’åŠ¨å…ƒç´ æ ·å¼ */
  .tag-us-section {
    margin: 1.5rem 0;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    backdrop-filter: blur(10px);
  }

  .tag-us-header {
    text-align: center;
    margin-bottom: 1rem;
  }

  .tag-us-title {
    font-size: 1.2rem;
    font-weight: bold;
    color: {{ section.settings.card_title_color }};
    margin: 0 0 0.5rem 0;
  }

  .tag-us-subtitle {
    font-size: 0.9rem;
    color: rgba({{ section.settings.card_title_color | color_extract: 'red' }}, {{ section.settings.card_title_color | color_extract: 'green' }}, {{ section.settings.card_title_color | color_extract: 'blue' }}, 0.8);
    margin: 0;
  }

  .user-content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
    gap: 0.8rem;
    margin: 1rem 0;
  }

  .user-content-item {
    position: relative;
    border-radius: 10px;
    overflow: hidden;
    aspect-ratio: 1;
  }

  .user-content-image {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .user-content-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
  }

  .user-content-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.7) 100%);
    display: flex;
    align-items: flex-end;
    padding: 0.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .user-content-item:hover .user-content-overlay {
    opacity: 1;
  }

  .user-tag {
    color: white;
    font-size: 0.7rem;
    font-weight: bold;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.2rem 0.4rem;
    border-radius: 10px;
    backdrop-filter: blur(5px);
  }

  .tag-us-cta {
    text-align: center;
    margin-top: 1rem;
  }

  .tag-us-instruction {
    font-size: 0.9rem;
    color: {{ section.settings.card_title_color }};
    margin: 0 0 0.8rem 0;
  }

  .social-tags {
    display: flex;
    justify-content: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  .social-tag {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
    color: white;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .social-tag:hover {
    transform: scale(1.05);
  }

  .instagram-tag {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
  }

  .tiktok-tag {
    background: linear-gradient(45deg, #ff0050, #00f2ea);
  }

  .button-container {
    text-align: {{ section.settings.button_alignment | default: 'left' }};
  }

  @media screen and (max-width: 749px) {
    .viral-social-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .viral-social-text h2 {
      font-size: {{ section.settings.mobile_main_title_font_size | default: 2 }}rem;
    }
    
    .viral-social-image h3 {
      font-size: {{ section.settings.mobile_card_title_font_size | default: 1.5 }}rem;
    }
    
    .viral-social-text p {
      font-size: {{ section.settings.mobile_description_font_size | default: 0.9 }}rem;
    }
    
    .viral-social-button {
      font-size: {{ section.settings.mobile_button_font_size | default: 0.9 }}rem;
      padding: {{ section.settings.mobile_button_padding_vertical | default: 0.8 }}rem {{ section.settings.mobile_button_padding_horizontal | default: 1.5 }}rem;
    }
    
    .button-container {
      text-align: {{ section.settings.mobile_button_alignment | default: section.settings.button_alignment | default: 'left' }};
    }
    
    .viral-social-image .phone-mockup {
      max-width: 180px;
      height: 180px;
    }
    
    /* Tag Us ç§»åŠ¨ç«¯æ ·å¼ */
    .tag-us-section {
      padding: 1rem;
      margin: 1rem 0;
    }
    
    .tag-us-title {
      font-size: 1rem;
    }
    
    .tag-us-subtitle {
      font-size: 0.8rem;
    }
    
    .user-content-grid {
      grid-template-columns: repeat(auto-fit, minmax(60px, 1fr));
      gap: 0.5rem;
    }
    
    .user-tag {
      font-size: 0.6rem;
      padding: 0.1rem 0.3rem;
    }
    
    .tag-us-instruction {
      font-size: 0.8rem;
    }
    
    .social-tag {
      font-size: 0.7rem;
      padding: 0.3rem 0.6rem;
    }
  }
{%- endstyle -%}

