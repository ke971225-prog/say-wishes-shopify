{%- style -%}
  .service-expectations {
    padding: 60px 20px;
    background: #f8f9fa;
  }
  
  .service-expectations__container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .service-expectations__header {
    text-align: center;
    margin-bottom: 50px;
  }
  
  .service-expectations__title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .service-expectations__description {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .service-expectations__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 20px;
  }
  
  .service-expectation {
    background: white;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .service-expectation:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }
  
  .service-expectation details {
    border: none;
  }
  
  .service-expectation summary {
    padding: 25px;
    cursor: pointer;
    list-style: none;
    display: flex;
    align-items: center;
    gap: 15px;
    background: linear-gradient(135deg, #e91e63, #f06292);
    color: white;
    transition: background 0.3s ease;
    position: relative;
  }
  
  .service-expectation summary:hover {
    background: linear-gradient(135deg, #d81b60, #ec407a);
  }
  
  .service-expectation summary::-webkit-details-marker {
    display: none;
  }
  
  .service-expectation__icon {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
  }
  
  .service-expectation__title {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
    flex-grow: 1;
  }
  
  .service-expectation__arrow {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
    fill: white;
  }
  
  .service-expectation details[open] .service-expectation__arrow {
    transform: rotate(180deg);
  }
  
  .service-expectation__content {
    padding: 25px;
    background: white;
    color: #666;
    line-height: 1.6;
    animation: slideDown 0.3s ease;
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 768px) {
    .service-expectations {
      padding: 40px 15px;
    }
    
    .service-expectations__title {
      font-size: 2rem;
    }
    
    .service-expectations__grid {
      grid-template-columns: 1fr;
    }
    
    .service-expectation summary {
      padding: 20px;
    }
    
    .service-expectation__content {
      padding: 20px;
    }
  }
{%- endstyle -%}

<div class="service-expectations">
  <div class="service-expectations__container">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="service-expectations__header">
        {%- if section.settings.title != blank -%}
          <h2 class="service-expectations__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="service-expectations__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    <div class="service-expectations__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'service_item' -%}
          <div class="service-expectation" {{ block.shopify_attributes }}>
            <details {% if section.settings.open_first_item and forloop.first %}open{% endif %}>
              <summary>
                <div class="service-expectation__icon">
                  {{ block.settings.icon | default: '‚úì' }}
                </div>
                <h3 class="service-expectation__title">{{ block.settings.title }}</h3>
                <svg class="service-expectation__arrow" viewBox="0 0 24 24">
                  <path d="M7 10l5 5 5-5z"/>
                </svg>
              </summary>
              <div class="service-expectation__content">
                {{ block.settings.content }}
              </div>
            </details>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

