<link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-price.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-featured-product.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-card.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-price.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-featured-product.css' | asset_url | stylesheet_tag }}</noscript>

<style>
  .featured-products {
    padding: 60px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  }
  
  .featured-products__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .featured-products__header {
    text-align: center;
    margin-bottom: 50px;
  }
  
  .featured-products__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .featured-products__subtitle {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
  }
  
  .product-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    position: relative;
  }
  
  .product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
  }
  
  .product-card__image {
    position: relative;
    overflow: hidden;
    height: 250px;
  }
  
  .product-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover .product-card__image img {
    transform: scale(1.05);
  }
  
  .product-card__badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: #ff6b35;
    color: white;
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
  }
  
  .product-card__content {
    padding: 25px;
  }
  
  .product-card__title {
    font-size: 1.4rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    line-height: 1.3;
  }
  
  .product-card__description {
    color: #666;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 20px;
  }
  
  .product-card__price {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 20px;
  }
  
  .product-card__price-current {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ff6b35;
  }
  
  .product-card__price-original {
    font-size: 1.1rem;
    color: #999;
    text-decoration: line-through;
  }
  
  .product-card__rating {
    display: flex;
    align-items: center;
    gap: 5px;
    margin-bottom: 20px;
  }
  
  .product-card__stars {
    color: #ffa500;
    font-size: 1rem;
  }
  
  .product-card__rating-text {
    color: #666;
    font-size: 0.9rem;
  }
  
  .product-card__button {
    width: 100%;
    background: linear-gradient(135deg, #007acc 0%, #005a87 100%);
    color: white;
    border: none;
    padding: 15px 25px;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }
  
  .product-card__button:hover {
    background: linear-gradient(135deg, #005a87 0%, #004066 100%);
    transform: translateY(-2px);
  }
  
  .featured-products__cta {
    text-align: center;
  }
  
  .featured-products__cta-button {
    background: linear-gradient(135deg, #ff6b35 0%, #e55a2b 100%);
    color: white;
    border: none;
    padding: 18px 40px;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    letter-spacing: 1px;
  }
  
  .featured-products__cta-button:hover {
    background: linear-gradient(135deg, #e55a2b 0%, #cc4a1f 100%);
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(255, 107, 53, 0.3);
  }
  
  @media (max-width: 768px) {
    .featured-products {
      padding: 40px 0;
    }
    
    .featured-products__title {
      font-size: 2rem;
    }
    
    .featured-products__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .product-card__content {
      padding: 20px;
    }
  }
</style>

<div class="featured-products">
  <div class="featured-products__container">
    <div class="featured-products__header">
      <h2 class="featured-products__title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="featured-products__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    
    <div class="featured-products__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product' %}
            <div class="product-card" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="product-card__image">
                  {% if block.settings.badge != blank %}
                    <div class="product-card__badge">{{ block.settings.badge }}</div>
                  {% endif %}
                  <img src="{{ block.settings.image | image_url: width: 400 }}" 
                       alt="{{ block.settings.title | escape }}" 
                       width="400" 
                       height="250"
                       loading="lazy">
                </div>
              {% else %}
                <div class="product-card__image">
                  {% if block.settings.badge != blank %}
                    <div class="product-card__badge">{{ block.settings.badge }}</div>
                  {% endif %}
                  <div style="width: 100%; height: 250px; background: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #999;">
                    No Image
                  </div>
                </div>
              {% endif %}
              
              <div class="product-card__content">
                {% if block.settings.title != blank %}
                  <h3 class="product-card__title">{{ block.settings.title }}</h3>
                {% endif %}
                
                {% if block.settings.description != blank %}
                  <p class="product-card__description">{{ block.settings.description }}</p>
                {% endif %}
                
                {% if block.settings.price != blank %}
                  <div class="product-card__price">
                    <span class="product-card__price-current">{{ block.settings.price }}</span>
                    {% if block.settings.original_price != blank %}
                      <span class="product-card__price-original">{{ block.settings.original_price }}</span>
                    {% endif %}
                  </div>
                {% endif %}
                
                {% if block.settings.show_rating %}
                  <div class="product-card__rating">
                    <span class="product-card__stars">⭐⭐⭐⭐⭐</span>
                    <span class="product-card__rating-text">({{ block.settings.rating_count }}+ reviews)</span>
                  </div>
                {% endif %}
                
                {% if block.settings.button_label != blank %}
                  <a href="{{ block.settings.button_link | default: '#' }}" class="product-card__button">
                    {{ block.settings.button_label }}
                  </a>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    {% if section.settings.cta_button_label != blank %}
      <div class="featured-products__cta">
        <a href="{{ section.settings.cta_button_link | default: '#' }}" class="featured-products__cta-button">
          {{ section.settings.cta_button_label }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Featured Products"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Discover our most popular video message packages"
    },
    {
      "type": "text",
      "id": "cta_button_label",
      "label": "CTA Button Label",
      "default": "View All Products"
    },
    {
      "type": "url",
      "id": "cta_button_link",
      "label": "CTA Button Link"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Product Badge",
          "default": "Popular"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product Title",
          "default": "Video Message from Africa"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Product Description",
          "default": "Get a personalized video message from our African friends"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Current Price",
          "default": "$29.99"
        },
        {
          "type": "text",
          "id": "original_price",
          "label": "Original Price (optional)",
          "default": "$39.99"
        },
        {
          "type": "checkbox",
          "id": "show_rating",
          "label": "Show Rating",
          "default": true
        },
        {
          "type": "text",
          "id": "rating_count",
          "label": "Rating Count",
          "default": "1000"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Order Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "blocks": [
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}