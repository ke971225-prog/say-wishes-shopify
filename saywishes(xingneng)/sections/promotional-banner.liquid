  }
</style>

<script>
  (function() {
    var root = document.getElementById('promotional-banner-{{ section.id }}');
    if (!root) return;
    var content = root.querySelector('.pb-content');
    var items = Array.prototype.slice.call(root.querySelectorAll('.pb-item'));
    if (!items.length) return;

    // é¢„å…ˆè®¡ç®—è®¾ç½®ï¼Œç”¨äºåˆå§‹åŒ–æ—¶çš„å¼¹è·³åŠ¨ç”»ï¼ˆå•æ¡æ¶ˆæ¯ä¹Ÿèƒ½çœ‹åˆ°å˜åŒ–ï¼‰
    var durationMs = parseInt(content.getAttribute('data-duration') || '5000', 10);
    var pauseOnHover = String(content.getAttribute('data-pause-on-hover')).toLowerCase() === 'true';
    var respectReduced = String(content.getAttribute('data-reduced-motion')).toLowerCase() === 'true';
    var prefersReduced = false;
    try { prefersReduced = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches; } catch(e) {}
    var useReducedMotion = respectReduced && prefersReduced;

    // åˆå§‹æ˜¾ç¤ºç¬¬ä¸€ä¸ª
    items.forEach(function(el, i) {
      el.classList.toggle('is-active', i === 0);
      el.style.opacity = i === 0 ? '1' : '0';
    });

    // åŠ¨æ€é«˜åº¦ï¼Œé¿å…åˆ‡æ¢æ—¶è·³åŠ¨/é—ªçƒ
    function setHeight(el) {
      try { content.style.height = el.offsetHeight + 'px'; } catch(e) {}
    }
    setHeight(items[0]);

    // åˆå§‹åŒ–ä¹Ÿç»™é¦–æ¡ä¸€ä¸ªè½»å¾®å¼¹è·³ï¼Œç¡®ä¿â€œæœ‰å˜åŒ–å¯è§â€
    if (!useReducedMotion) {
      items[0].classList.add('is-entering');
      setTimeout(function() { items[0].classList.remove('is-entering'); }, 600);
    }

    var index = 0;
    var timer = null;

    function schedule() {
      clearTimeout(timer);
      timer = setTimeout(step, durationMs);
    }

    function step() {
      if (items.length <= 1) return;
      var current = items[index];
      var nextIndex = (index + 1) % items.length;
      var next = items[nextIndex];

      // é¢„è®¾ä¸‹ä¸€å¸§é«˜åº¦ï¼Œé¿å…è·³åŠ¨
      setHeight(next);

      // åº”ç”¨ç±»åè¿›è¡ŒåŠ¨ç”»
      if (!useReducedMotion) {
        next.classList.add('is-entering');
        current.classList.add('is-leaving');
      }

      // åˆ‡æ¢å¯è§æ€§
      next.style.opacity = '1';
      next.classList.add('is-active');

      // è½»å¾®å»¶æ—¶åéšè—å½“å‰ï¼Œç§»é™¤ç±»å
      setTimeout(function() {
        current.style.opacity = '0';
        current.classList.remove('is-active');
        if (!useReducedMotion) {
          // æ¸…ç†ç±»å
          setTimeout(function() {
            next.classList.remove('is-entering');
            current.classList.remove('is-leaving');
          }, 600);
        }
        index = nextIndex;
        schedule();
      }, useReducedMotion ? 0 : 60);
    }

    if (pauseOnHover) {
      root.addEventListener('mouseenter', function() { clearTimeout(timer); });
      root.addEventListener('mouseleave', function() { schedule(); });
    }

    schedule();
  })();
</script>

