<style>
  /* ä½œç”¨åŸŸéš”ç¦»ï¼Œé¿å…ä¸å…¶ä»–ä¸»é¢˜æ ·å¼å†²çª */
  #promotional-banner-{{ section.id }} {
    background: linear-gradient(135deg, {{ section.settings.bg_color_start | default: '#ff6b35' }}, {{ section.settings.bg_color_end | default: '#f7931e' }});
    color: {{ section.settings.text_color | default: '#ffffff' }};
    text-align: {{ section.settings.text_alignment | default: 'center' }};
    padding: {{ section.settings.padding_vertical | default: 12 }}px {{ section.settings.padding_horizontal | default: 20 }}px;
    position: relative;
    overflow: hidden;
  }

  /* å¯é€‰é—ªå…‰æ•ˆæœï¼ˆä¿æŒè½»é‡ï¼‰ */
  #promotional-banner-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
    animation: pb-shine 3s infinite;
    pointer-events: none;
  }

  #promotional-banner-{{ section.id }} .pb-content {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.content_justify | default: 'center' }};
    position: relative;
    z-index: 1;
    width: 100%;
    transition: height 250ms ease;
  }

  #promotional-banner-{{ section.id }} .pb-items {
    position: relative;
    width: 100%;
  }

  #promotional-banner-{{ section.id }} .pb-item {
    position: absolute;
    inset: 0;
    display: inline-flex;
    align-items: center;
    justify-content: {{ section.settings.content_justify | default: 'center' }};
    gap: {{ section.settings.item_gap | default: 8 }}px;
    padding: 0;
    opacity: 0;
    pointer-events: none;
    background-color: var(--pb-item-bg, transparent);
    color: var(--pb-item-text-color, {{ section.settings.text_color | default: '#ffffff' }});
    font-size: var(--pb-item-font-size, 14px);
    text-shadow: 1px 1px 2px rgba(0,0,0,0.25);
    will-change: opacity, transform;
  }

  #promotional-banner-{{ section.id }} .pb-item.is-active {
    opacity: 1;
    pointer-events: auto;
  }

  #promotional-banner-{{ section.id }} .pb-icon {
    font-size: 16px;
    color: currentColor;
  }

  #promotional-banner-{{ section.id }} .pb-text {
    color: currentColor;
  }

  /* åŠ¨ç”»å…³é”®å¸§ï¼šè·³åŠ¨è¿›å…¥ + æ·¡å‡ºç¦»å¼€ */
  @keyframes pb-bounce-in {
    0% { opacity: 0; transform: translateY(-8px) scale(0.98); }
    60% { opacity: 1; transform: translateY(3px) scale(1.01); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
  }

  @keyframes pb-fade-out {
    0% { opacity: 1; transform: translateY(0); }
    100% { opacity: 0; transform: translateY(4px); }
  }

  #promotional-banner-{{ section.id }} .pb-item.is-entering {
    animation: pb-bounce-in 500ms cubic-bezier(0.22, 1, 0.36, 1) both;
  }

  #promotional-banner-{{ section.id }} .pb-item.is-leaving {
    animation: pb-fade-out 400ms ease-out both;
  }

  @keyframes pb-shine {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  @media (max-width: 768px) {
