{
  "name": "促销横幅",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "promo_text",
      "label": "默认促销文案",
      "default": "Only Today: 30% Off 🔥 Don't Miss Out!",
      "info": "当未添加信息块时使用该文案。"
    },
    {
      "type": "header",
      "content": "显示设置"
    },
    {
      "type": "range",
      "id": "display_duration",
      "min": 2,
      "max": 15,
      "step": 1,
      "unit": "s",
      "label": "每条信息显示时长（秒）",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "悬停暂停",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "respect_reduced_motion",
      "label": "遵循系统的减少动态",
      "default": true
    },

    {
      "type": "header",
      "content": "布局与样式"
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 0,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "垂直内边距",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "水平内边距",
      "default": 20
    },
    {
      "type": "range",
      "id": "item_gap",
      "min": 0,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "条目间距",
      "default": 8
    },
    {
      "type": "color",
      "id": "bg_color_start",
      "label": "背景渐变起始色",
      "default": "#ff6b35"
    },
    {
      "type": "color",
      "id": "bg_color_end",
      "label": "背景渐变结束色",
      "default": "#f7931e"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "默认文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "文本对齐",
      "options": [
        { "value": "left", "label": "靠左" },
        { "value": "center", "label": "居中" },
        { "value": "right", "label": "靠右" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "content_justify",
      "label": "信息位置",
      "options": [
        { "value": "flex-start", "label": "靠左" },
        { "value": "center", "label": "居中" },
        { "value": "flex-end", "label": "靠右" }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
