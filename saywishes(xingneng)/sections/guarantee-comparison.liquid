    }
    
    .guarantee-comparison__text {
      font-size: {{ section.settings.mobile_guarantee_text_font_size | default: 0.9 }}rem;
    }
    
    .guarantee-comparison__button {
      font-size: {{ section.settings.mobile_button_font_size | default: 0.9 }}rem;
      padding: {{ section.settings.mobile_button_padding_vertical | default: 12 }}px {{ section.settings.mobile_button_padding_horizontal | default: 25 }}px;
    }
    
    .comparison-header {
      grid-template-columns: 1.5fr 1fr 1fr;
    }
    
    .comparison-row {
      grid-template-columns: 1.5fr 1fr 1fr;
    }
    
    .comparison-feature {
      font-size: {{ section.settings.mobile_feature_font_size | default: 0.8 }}rem;
      padding: 12px 8px;
    }
    
    .comparison-check {
      padding: 12px 8px;
      font-size: {{ section.settings.mobile_check_font_size | default: 1 }}rem;
    }
    
    .comparison-header > div {
      font-size: {{ section.settings.mobile_header_font_size | default: 0.8 }}rem;
    }
  }
</style>

<section class="guarantee-comparison">
  <div class="guarantee-comparison__container">
    <div class="guarantee-comparison__content">
      {% if section.settings.heading != blank %}
        <h2 class="guarantee-comparison__title">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <p class="guarantee-comparison__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      
      <div class="guarantee-comparison__guarantee">
        {% if section.settings.guarantee_badge != blank %}
          <div class="guarantee-comparison__badge">{{ section.settings.guarantee_badge }}</div>
        {% endif %}
        
        {% if section.settings.guarantee_rating != blank %}
          <div class="guarantee-comparison__rating">{{ section.settings.guarantee_rating }}</div>
        {% endif %}
        
        {% if section.settings.guarantee_text != blank %}
          <p class="guarantee-comparison__text">{{ section.settings.guarantee_text }}</p>
        {% endif %}
        
        {% if section.settings.guarantee_button_label != blank and section.settings.guarantee_button_link != blank %}
          <a href="{{ section.settings.guarantee_button_link }}" class="guarantee-comparison__button">
            {{ section.settings.guarantee_button_label }}
          </a>
        {% endif %}
      </div>
    </div>
    
    <div class="guarantee-comparison__table">
      <div class="comparison-table">
        <div class="comparison-header">
          <div>FEATURES</div>
          <div>{{ section.settings.us_label | default: 'US' }}</div>
          <div>{{ section.settings.others_label | default: 'OTHERS' }}</div>
        </div>
        
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'comparison_row' %}
              <div class="comparison-row">
                <div class="comparison-feature">{{ block.settings.feature_name }}</div>
                <div class="comparison-check {% if block.settings.us_value == 'yes' %}yes{% else %}no{% endif %}">
                  {% if block.settings.us_value == 'yes' %}✓{% else %}✗{% endif %}
                </div>
                <div class="comparison-check {% if block.settings.others_value == 'yes' %}yes{% else %}no{% endif %}">
                  {% if block.settings.others_value == 'yes' %}✓{% else %}✗{% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

