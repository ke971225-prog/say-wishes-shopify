<style>
  .guarantee-comparison {
    padding: {{ section.settings.section_padding_top | default: 60 }}px {{ section.settings.section_padding_horizontal | default: 20 }}px {{ section.settings.section_padding_bottom | default: 60 }}px;
    {% if section.settings.enable_gradient_background %}
      background: linear-gradient(135deg, {{ section.settings.gradient_color_start | default: '#8BC34A' }}, {{ section.settings.gradient_color_end | default: '#E91E63' }});
    {% else %}
      background: {{ section.settings.section_background_color | default: '#f8f9fa' }};
    {% endif %}
  }
  
  .guarantee-comparison__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 60px;
    align-items: center;
  }
  
  .guarantee-comparison__content {
    padding-right: 20px;
  }
  
  .guarantee-comparison__title {
    font-size: {{ section.settings.title_font_size | default: 2.5 }}rem;
    font-weight: {{ section.settings.title_font_weight | default: 'bold' }};
    color: {{ section.settings.title_color | default: '#333' }};
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .guarantee-comparison__subtitle {
    font-size: {{ section.settings.subtitle_font_size | default: 1.1 }}rem;
    font-weight: {{ section.settings.subtitle_font_weight | default: 'normal' }};
    color: {{ section.settings.subtitle_color | default: '#666' }};
    margin-bottom: 30px;
    line-height: 1.6;
  }
  
  .guarantee-comparison__guarantee {
    background: {{ section.settings.guarantee_background | default: 'linear-gradient(135deg, #e91e63, #f06292)' }};
    border-radius: {{ section.settings.guarantee_border_radius | default: 20 }}px;
    padding: {{ section.settings.guarantee_padding | default: 40 }}px;
    text-align: center;
    color: {{ section.settings.guarantee_text_color | default: 'white' }};
    margin-bottom: 30px;
  }
  
  .guarantee-comparison__badge {
    font-size: {{ section.settings.badge_font_size | default: 2 }}rem;
    font-weight: {{ section.settings.badge_font_weight | default: 'normal' }};
    margin-bottom: 15px;
  }
  
  .guarantee-comparison__rating {
    font-size: {{ section.settings.rating_font_size | default: 1.2 }}rem;
    font-weight: {{ section.settings.rating_font_weight | default: 'normal' }};
    margin-bottom: 20px;
    color: {{ section.settings.rating_color | default: '#ffd700' }};
  }
  
  .guarantee-comparison__text {
    font-size: {{ section.settings.guarantee_text_font_size | default: 1 }}rem;
    font-weight: {{ section.settings.guarantee_text_font_weight | default: 'normal' }};
    line-height: 1.6;
    margin-bottom: 25px;
    color: {{ section.settings.guarantee_text_color | default: 'rgba(255, 255, 255, 0.9)' }};
  }
  
  .guarantee-comparison__button {
    background: {{ section.settings.button_background | default: 'linear-gradient(135deg, #e91e63, #f06292)' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    padding: {{ section.settings.button_padding_vertical | default: 15 }}px {{ section.settings.button_padding_horizontal | default: 30 }}px;
    border: {{ section.settings.button_border_width | default: 0 }}px solid {{ section.settings.button_border_color | default: 'transparent' }};
    border-radius: {{ section.settings.button_border_radius | default: 25 }}px;
    font-size: {{ section.settings.button_font_size | default: 1 }}rem;
    font-weight: {{ section.settings.button_font_weight | default: '600' }};
    text-transform: {{ section.settings.button_text_transform | default: 'none' }};
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.3s ease;
  }
  
  .guarantee-comparison__button:hover {
    transform: translateY(-2px);
    background: {{ section.settings.button_hover_background | default: 'linear-gradient(135deg, #d81b60, #ec407a)' }};
    color: {{ section.settings.button_hover_text_color | default: 'white' }};
  }
  
  .guarantee-comparison__table {
    background: {{ section.settings.table_background | default: 'linear-gradient(135deg, #e91e63, #f06292)' }};
    border-radius: {{ section.settings.table_border_radius | default: 20 }}px;
    padding: {{ section.settings.table_padding | default: 40 }}px;
    position: relative;
    overflow: hidden;
  }
  
  .comparison-table {
    background: {{ section.settings.comparison_table_background | default: 'white' }};
    border-radius: {{ section.settings.comparison_table_border_radius | default: 15 }}px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }
  
  .comparison-header {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    background: {{ section.settings.header_background | default: '#333' }};
    color: {{ section.settings.header_text_color | default: 'white' }};
    font-weight: {{ section.settings.header_font_weight | default: '600' }};
  }
  
  .comparison-header > div {
    padding: 20px 15px;
    text-align: center;
    font-size: {{ section.settings.header_font_size | default: 0.9 }}rem;
  }
  
  .comparison-row {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    border-bottom: 1px solid {{ section.settings.row_border_color | default: '#eee' }};
  }
  
  .comparison-row:last-child {
    border-bottom: none;
  }
  
  .comparison-feature {
    padding: 15px;
    background: {{ section.settings.feature_background | default: 'linear-gradient(135deg, #e91e63, #f06292)' }};
    color: {{ section.settings.feature_text_color | default: 'white' }};
    font-weight: {{ section.settings.feature_font_weight | default: '600' }};
    font-size: {{ section.settings.feature_font_size | default: 0.9 }}rem;
    text-align: center;
  }
  
  .comparison-check {
    padding: 15px;
    text-align: center;
    font-size: {{ section.settings.check_font_size | default: 1.2 }}rem;
    font-weight: {{ section.settings.check_font_weight | default: 'bold' }};
  }
  
  .comparison-check.yes {
    color: {{ section.settings.check_yes_color | default: '#4caf50' }};
  }
  
  .comparison-check.no {
    color: {{ section.settings.check_no_color | default: '#f44336' }};
  }
  
  @media (max-width: 768px) {
    .guarantee-comparison {
      padding: {{ section.settings.mobile_section_padding_top | default: 40 }}px {{ section.settings.mobile_section_padding_horizontal | default: 20 }}px {{ section.settings.mobile_section_padding_bottom | default: 40 }}px;
    }
    
    .guarantee-comparison__container {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .guarantee-comparison__content {
      text-align: center;
      padding-right: 0;
    }
    
    .guarantee-comparison__title {
      font-size: {{ section.settings.mobile_title_font_size | default: 2 }}rem;
    }
    
    .guarantee-comparison__subtitle {
