<style>
  .service-features {
    padding: 60px 20px;
    {% if section.settings.enable_gradient_background %}
      background: linear-gradient(135deg, {{ section.settings.gradient_color_start | default: '#8BC34A' }}, {{ section.settings.gradient_color_end | default: '#E91E63' }});
    {% else %}
      background: {{ section.settings.section_bg_color | default: '#f8f9fa' }};
    {% endif %}
  }
  
  .service-features__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 60px;
    align-items: center;
  }
  
  .service-features__content {
    padding-right: 20px;
    text-align: {{ section.settings.button_alignment | default: 'left' }};
  }
  
  .service-features__badge {
    font-size: {{ section.settings.badge_font_size | default: 0.9 }}rem;
    font-weight: {{ section.settings.badge_font_weight | default: '600' }};
    color: {{ section.settings.badge_color | default: '#666' }};
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 15px;
  }
  
  .service-features__title {
    font-size: {{ section.settings.title_font_size | default: 2.5 }}rem;
    font-weight: {{ section.settings.title_font_weight | default: 'bold' }};
    color: {{ section.settings.title_color | default: '#333' }};
    margin-bottom: 30px;
    line-height: 1.2;
  }
  
  .service-features__list {
    list-style: none;
    padding: 0;
    margin-bottom: 40px;
  }
  
  .service-features__item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 20px;
    font-size: {{ section.settings.item_font_size | default: 1 }}rem;
    line-height: 1.6;
  }
  
  .service-features__icon {
    color: {{ section.settings.icon_color | default: '#ffd700' }};
    font-size: {{ section.settings.icon_font_size | default: 1.1 }}rem;
    margin-top: 2px;
    flex-shrink: 0;
  }
  
  .service-features__item-content {
    color: {{ section.settings.item_text_color | default: '#333' }};
  }
  
  .service-features__item-title {
    font-weight: {{ section.settings.item_title_font_weight | default: '600' }};
    font-size: {{ section.settings.item_title_font_size | default: 1 }}rem;
    color: {{ section.settings.item_title_color | default: '#333' }};
    margin-bottom: 2px;
  }
  
  .service-features__item-desc {
    color: {{ section.settings.item_desc_color | default: '#666' }};
    font-size: {{ section.settings.item_desc_font_size | default: 1.0 }}rem;  // 更新为 1.0
    font-weight: {{ section.settings.item_desc_font_weight | default: 'normal' }};
  }
  
  .service-features__button {
    background: {{ section.settings.button_bg_color | default: 'linear-gradient(135deg, #e91e63, #f06292)' }};
    color: {{ section.settings.button_text_color | default: 'white' }};
    padding: {{ section.settings.button_padding_vertical | default: 15 }}px {{ section.settings.button_padding_horizontal | default: 30 }}px;
    border: {{ section.settings.button_border_width | default: 0 }}px solid {{ section.settings.button_border_color | default: 'transparent' }};
    border-radius: {{ section.settings.button_border_radius | default: 25 }}px;
    font-size: {{ section.settings.button_font_size | default: 1 }}rem;
    font-weight: {{ section.settings.button_font_weight | default: '600' }};
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.3s ease, background 0.3s ease;
    text-transform: {{ section.settings.button_text_transform | default: 'uppercase' }};
  }
  
  .service-features__button:hover {
    transform: translateY(-2px);
    background: {{ section.settings.button_hover_bg_color | default: 'linear-gradient(135deg, #c2185b, #e91e63)' }};
    color: {{ section.settings.button_hover_text_color | default: 'white' }};
  }
  
  .service-features__image {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }
  
  .service-features__image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  /* 按钮对齐样式 */
  .service-features__content.button-left {
    text-align: left;
  }
  
  .service-features__content.button-center {
    text-align: center;
  }
  
  .service-features__content.button-right {
    text-align: right;
  }
  
  /* 移动端响应式设置 */
  @media (max-width: 768px) {
    .service-features__container {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .service-features__content {
      text-align: {{ section.settings.button_alignment | default: 'left' }};
      padding-right: 0;
    }
    
    .service-features__title {
      font-size: {{ section.settings.mobile_title_font_size | default: 2 }}rem;
    }
    
    .service-features__badge {
      font-size: {{ section.settings.mobile_badge_font_size | default: 0.8 }}rem;
    }
    
    .service-features__item {
      font-size: {{ section.settings.mobile_item_font_size | default: 0.9 }}rem;
    }
    
    .service-features__item-title {
      font-size: {{ section.settings.mobile_item_title_font_size | default: 0.9 }}rem;
    }
    
    .service-features__item-desc {
      font-size: {{ section.settings.mobile_item_desc_font_size | default: 0.9 }}rem;  // 更新为 0.9
    }
    
    .service-features__button {
      font-size: {{ section.settings.mobile_button_font_size | default: 0.9 }}rem;
    }
    
    .service-features__icon {
      font-size: {{ section.settings.mobile_icon_font_size | default: 1 }}rem;
    }
  }
</style>

<div class="service-features">
  <div class="service-features__container">
    <div class="service-features__content button-{{ section.settings.button_alignment | default: 'left' }}">
      {% if section.settings.badge != blank %}
        <div class="service-features__badge">{{ section.settings.badge }}</div>
      {% endif %}
      
      <h2 class="service-features__title">{{ section.settings.title }}</h2>
      
      {% if section.blocks.size > 0 %}
        <ul class="service-features__list">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <li class="service-features__item" {{ block.shopify_attributes }}>
                <span class="service-features__icon">{{ block.settings.icon }}</span>
                <div class="service-features__item-content">
                  <div class="service-features__item-title">{{ block.settings.title }}</div>
                  {% if block.settings.description != blank %}
                    <div class="service-features__item-desc">{{ block.settings.description }}</div>
                  {% endif %}
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endif %}
      
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="service-features__button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
    
    <div class="service-features__image">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 600 | image_tag: loading: 'lazy' }}
      {% else %}
        <div style="background: #ddd; height: 400px; display: flex; align-items: center; justify-content: center; color: #666;">
          Please upload an image
        </div>
      {% endif %}
    </div>
  </div>
</div>

